rem($value)
  return unit(($value / 16), 'rem')

grid($gutter = $gutter-size, $vertical-gutter = false)
  display flex
  margin-left $gutter * -1

  if $vertical-gutter
    margin-top $gutter * -1

grid-cell($size = 1, $gutter = $gutter-size, $vertical-gutter = false)
  flex $size
  padding-left $gutter

  if $vertical-gutter
    padding-top $gutter

size()
  if length(arguments) == 1
    width arguments[0]
    height arguments[0]
  else
    width arguments[0]
    height arguments[1]

triangle($color, $size = 36px)
  border-left $size solid transparent
  border-right @border-left
  border-top $size solid $color
  content ''
  display block
  left 50%
  margin-left $size * -1
  position absolute
  top 0
  size 0
