.c-services
  padding 6rem 0

  &__items
    grid($gutter-size * 4)
    flex-wrap wrap

  &__item
    grid-cell(0 0 50%, $gutter-size * 4)
    display flex
    flex-direction column
    margin 2rem 0

  &__header
    align-items center
    display flex
    margin-bottom 0.5rem

  &__info
    font-style italic
    margin-left 1rem
    text-transform uppercase

    &:before
      content '/'
      margin 0 1rem

  &__description
    color $medium-gray
    line-height 1.8

  &__banner
    margin auto
