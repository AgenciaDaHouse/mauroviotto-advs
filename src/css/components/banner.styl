.c-banner
  box-shadow 0 5px 15px rgba(0,0,0,.5)
  position relative
  z-index 1

  &__item
    background-position center
    background-size cover
    height 100vh

  &__wrapper
    height 85vh
    position relative

  &__text
    color $white
    bottom 0
    font-size rem(54)
    font-weight 300
    letter-spacing -0.125rem
    line-height 0.9
    left 0
    max-width rem(500)
    position absolute
    text-shadow 0 8px 10px rgba(0,0,0,.25)

    &:before
      content '"'
      position absolute
      font-size 2.75em
      left -3rem
      top -1.25rem
